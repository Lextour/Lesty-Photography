{% extends 'base.html.twig' %}

{% block title %}Edit Service Booking{% endblock %}

{% block body %}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow rounded-3 border-0">
        <div class="card-body p-4">
          <h2 class="fw-bold text-center mb-4">Edit Service Booking</h2>

          {{ form_start(form) }}

          <div class="mb-3">
            {{ form_label(form.customerName, 'Customer Name', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.customerName, { 'attr': {'class': 'form-control', 'placeholder': 'Enter customer name'} }) }}
            {{ form_errors(form.customerName) }}
          </div>

          <div class="mb-3">
            {{ form_label(form.serviceType, 'Service Type', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.serviceType, { 'attr': {'class': 'form-control', 'placeholder': 'Enter service type'} }) }}
            {{ form_errors(form.serviceType) }}
          </div>

          <div class="mb-3">
            {{ form_label(form.advisercategory, 'Adviser Category', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.advisercategory, { 'attr': {'class': 'form-control', 'placeholder': 'Enter adviser category'} }) }}
            {{ form_errors(form.advisercategory) }}
          </div>

          <div class="mb-3">
            {{ form_label(form.preferredDate, 'Preferred Date', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.preferredDate, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.preferredDate) }}
          </div>

          <div class="mb-3">
            {{ form_label(form.notes, 'Notes', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.notes, { 'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Add notes (optional)'} }) }}
            {{ form_errors(form.notes) }}
          </div>

          <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_servicebooking_index') }}" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-orange">Update Booking</button>
          </div>

          {{ form_end(form) }}

        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
