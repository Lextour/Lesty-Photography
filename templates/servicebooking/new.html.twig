{% extends 'headerfooter.html.twig' %}

{% block title %}Photographz | New Service Booking{% endblock %}

{% block body %}

<style>
  /* Custom CSS Variables for the theme */
  :root {
    --primary-green: #4C763B; /* Main accent green */
    --dark-green: #2e4a28; /* Darker green for contrast */
    --light-green: #e9f0e7; /* Very light green for subtle backgrounds */
    --primary-black: #1a1a1a; /* Main black for text/elements */
    --secondary-black: #2e2e2e; /* Slightly lighter black */
    --primary-white: #ffffff; /* Pure white */
    --off-white: #f8f9fa; /* Off-white for general backgrounds */
    --border-color: #dee2e6; /* Standard border color */
    --form-bg: var(--primary-white); /* Form card background */
  }

  /* General Body and Typography */
  body {
    font-family: 'Open Sans', sans-serif !important;
    background-color: var(--off-white);
    color: var(--secondary-black);
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Montserrat', sans-serif !important;
    font-weight: 700;
  }
  p, li, button, span {
    font-family: 'Open Sans', sans-serif !important;
  }

  /* Page Header */
  .page-header-booking {
    background: linear-gradient(135deg, var(--dark-green) 0%, var(--primary-green) 100%);
    color: var(--primary-white);
    text-align: center;
    padding: 80px 0;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }
  .page-header-booking h1 {
    font-size: 3rem;
    margin-bottom: 15px;
    font-weight: 700;
  }
  .page-header-booking p {
    font-size: 1.25rem;
    font-weight: 400;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Form Card Styling */
  .booking-form-card {
    background-color: var(--form-bg);
    box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.08);
    border: none;
    border-radius: 1rem; /* Softer rounded corners */
    padding: 2.5rem;
    margin-top: 10px; /* Overlap with header */
    position: relative;
    z-index: 10;
  }

  /* Form Elements */
  .form-label {
    font-weight: 600;
    color: var(--secondary-black);
    margin-bottom: 0.5rem;
  }
  .form-control {
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
    font-size: 1rem;
    color: var(--secondary-black);
  }
  .form-control:focus {
    border-color: var(--primary-green);
    box-shadow: 0 0 0 0.25rem rgba(76, 118, 59, 0.25);
    background-color: var(--light-green); /* Subtle green background on focus */
  }
  .form-control::placeholder {
    color: #a0a0a0;
  }
  textarea.form-control {
    min-height: 100px;
    resize: vertical;
  }
  .form-errors {
    color: #dc3545; /* Red for errors */
    font-size: 0.875rem;
    margin-top: 0.25rem;
  }

  /* Buttons */
  .btn-primary-green {
    background: var(--primary-green);
    color: var(--primary-white);
    border: 1px solid var(--primary-green);
    transition: 0.3s ease;
    padding: 12px 30px;
    border-radius: 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 1rem;
  }
  .btn-primary-green:hover {
    background: var(--dark-green);
    border-color: var(--dark-green);
    color: var(--primary-white);
    transform: translateY(-2px);
  }

  .btn-secondary-outline {
    background: transparent;
    color: var(--secondary-black);
    border: 1px solid var(--border-color);
    transition: 0.3s ease;
    padding: 12px 30px;
    border-radius: 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 1rem;
  }
  .btn-secondary-outline:hover {
    background: var(--light-green);
    border-color: var(--primary-green);
    color: var(--dark-green);
    transform: translateY(-2px);
  }

  /* Flash message style */
  .flash-success-alert {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 9999;
    background-color: var(--primary-green);
    color: var(--primary-white);
    padding: 15px 25px;
    border-radius: 0.5rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    display: none; /* Hidden by default */
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }
  .flash-success-alert.show {
    display: block;
    opacity: 1;
  }

  @media (max-width: 768px) {
    .page-header-booking h1 { font-size: 2.5rem; }
    .page-header-booking p { font-size: 1.1rem; }
    .booking-form-card { padding: 1.5rem; }
    .d-flex.justify-content-between { flex-direction: column; gap: 1rem; }
    .btn-primary-green, .btn-secondary-outline { width: 100%; }
  }
</style>


<!-- Page Header -->
<section class="page-header-booking">
  <div class="container">
    <h1 class="fw-bold mb-3">Create New Service Booking</h1>
    <p class="mb-0">Fill out the form below to schedule a new service booking with Photographz.</p>
  </div>
</section>

<!-- Service Booking Form -->
<section class="py-5">
  <div class="container">
    <div class="card booking-form-card mx-auto" style="max-width: 800px;">
      <div class="card-body">
        {{ form_start(form, {'attr': {'id': 'serviceBookingForm'}}) }}

        <div class="mb-4">
          {{ form_label(form.customerName, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.customerName, {'attr': {'class': 'form-control', 'placeholder': 'Enter your full name'}}) }}
          {{ form_errors(form.customerName) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.serviceType, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.serviceType, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.serviceType) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.advisercategory, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.advisercategory, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.advisercategory) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.preferredDate, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.preferredDate, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.preferredDate) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.notes, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.notes, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Any specific requests or details?'}}) }}
          {{ form_errors(form.notes) }}
        </div>

        <div class="d-flex justify-content-between mt-5">
          <a href="{{ path('app_servicebooking_index') }}" class="btn btn-secondary-outline">Back to List</a>
          <button type="submit" class="btn btn-primary-green">Create Booking</button>
        </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
</section>

<!-- Flash message alert -->
<div id="flash-success-alert" class="flash-success-alert">
  <i class="bi bi-check-circle-fill me-2"></i>
  {{ app.flashes('success')|first }}
</div>

{% block javascripts %}
  {{ parent() }}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Show flash message if it exists
      const flashMessageDiv = document.getElementById('flash-success-alert');
      if (flashMessageDiv && flashMessageDiv.textContent.trim() !== '') {
        flashMessageDiv.classList.add('show');
        setTimeout(() => {
          flashMessageDiv.classList.remove('show');
        }, 5000); // Hide after 5 seconds
      }

      // Initialize any date pickers if your form_widget for preferredDate renders one
      // Example for flatpickr (if you're using it, otherwise remove or adapt)
      if (typeof flatpickr !== 'undefined') {
        flatpickr("#{{ form.preferredDate.vars.id }}", {
          enableTime: true,
          dateFormat: "Y-m-d H:i",
          altInput: true,
          altFormat: "F j, Y h:i K",
          minDate: "today",
        });
      }
    });
  </script>
{% endblock %}

{% endblock %}