<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
      <style>
      
     a, header, h1, h2, h3, h4, h5, h6 {
    font-family: 'Montserrat', sans-serif !important;
    font-weight: 700;
  }
    p,li, button, span {
      font-family: 'Open Sans', sans-serif !important;
    }
    h1, h2, h3, .heading {
      font-family: 'Montserrat', sans-serif;
    }
        :root {
          --dark-bg: #2E2E2E;
          --accent: #B0CE88;
          --light-bg: #f8f9fa;
        }

        body {
          font-family: 'Montserrat', sans-serif;
          margin: 0;
          background-color: var(--light-bg);
        }

        /* ===== HEADER ===== */
        .navbar {
          background-color: var(--dark-bg) !important;
          font-family: 'Montserrat', sans-serif;
        }

        .navbar-brand img {
          width: 50px;
          height: 32px;
          filter: grayscale(1) brightness(0) invert(1);
        }

        /* ===== NAVIGATION ===== */
        .nav-link {
          color: white !important;
          font-weight: 500;
          transition: color 0.2s ease, transform 0.2s ease;
        }
        .nav-link:hover {
          color: var(--accent) !important;
          transform: scale(1.05);
        }
        .nav-link.active {
          color: var(--accent) !important;
          font-weight: 600 !important;
        }

        .btn-outline-light {
          font-family: 'Montserrat', sans-serif;
          font-weight: 500;
          border-width: 1.5px;
          transition: all 0.2s ease;
        }

        .btn-outline-light:hover {
          background-color: white;
          color: var(--dark-bg);
        }

        .btn-orange {
          background: var(--accent);
          color: white;
          border: none;
          font-weight: 500;
        }

        .btn-orange:hover {
          opacity: 1;
        }

        /* ===== FOOTER ===== */
        footer {
          background-color: var(--dark-bg);
          color: white;
          text-align: center;
          padding: 2rem 1rem;
          margin-top: 3rem;
          font-family: 'Montserrat', sans-serif;
        }

        footer .social-links a {
          color: var(--accent);
          margin: 0 10px;
          font-size: 1.3rem;
          transition: opacity 0.2s;
        }

        footer .social-links a:hover {
          opacity: 0.8;
        }

        footer p {
          margin-top: 1rem;
          color: #aaa;
          font-size: 0.9rem;
        }
      </style>
    {% endblock %}

  </head>

  <body style="overflow:auto">
    <!-- Flash Modal -->
<div class="modal fade" id="flashModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title">Success</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="flashModalBody">
        <!-- Message will be injected here -->
      </div>
    </div>
  </div>
</div>

    <!-- ===== HEADER ===== -->
    <header class="navbar p-3">
      <div class="container-fluid flex-wrap justify-content-between align-items-center">

        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center mb-2 mb-lg-0" href="{{ path('app_projects') }}">
          <img src="{{ asset('camera.png') }}" alt="Logo">
        </a>

        <!-- Nav links -->
        <ul class="nav justify-content-center flex-wrap mx-auto">
          <li class="nav-item">
            <a id="nav-home" class="nav-link fs-6 {% if app.request.get('_route') == 'app_projects' %}active{% endif %}" href="{{ path('app_projects') }}">Home</a>
          </li>
          <li class="nav-item">
            <a id="nav-products" class="nav-link fs-6 {% if 'products' in app.request.get('_route') %}active{% endif %}" href="{{ path('app_products') }}">Products</a>
          </li>
          <li class="nav-item">
            <a id="nav-services" class="nav-link fs-6 {% if 'services' in app.request.get('_route') %}active{% endif %}" href="{{ path('app_servicebooking_new') }}">Service Booking</a>
          </li>
          <li class="nav-item">
            <a id="nav-about" class="nav-link fs-6 {% if 'about' in app.request.get('_route') %}active{% endif %}" href="{{ path('app_about')}}">About</a>
          </li>
          <li class="nav-item">
            <a id="nav-contact" class="nav-link fs-6 {% if 'contact' in app.request.get('_route') %}active{% endif %}" href="{{ path('app_contact')}}">Contact</a>
          </li>

        </ul>

        <!-- Right Buttons -->
        <div class="d-flex flex-wrap justify-content-center justify-content-lg-end gap-2 mt-3 mt-lg-0">
          <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm">Login</a>
          <a href="{{ path('app_user_new') }}" class="btn btn-sm btn-orange">Sign-up</a>
        </div>

      </div>
    </header>

    <!-- ===== MAIN CONTENT ===== -->
    <main style="min-height: 75vh; padding: 2rem;">
      {% block body %}{% endblock %}
    </main>

    <!-- ===== FOOTER ===== -->
    <footer>
      <div class="social-links">
        <a href="#"><i class="bi bi-facebook"></i></a>
        <a href="#"><i class="bi bi-instagram"></i></a>
        <a href="#"><i class="bi bi-twitter-x"></i></a>
      </div>
      <p>© {{ "now"|date("Y") }} Photographz. All Rights Reserved.</p>
    </footer>

    {% block javascripts %}
        <script>
        document.addEventListener('DOMContentLoaded', function() {
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    const modalBody = document.getElementById('flashModalBody');
                    if (modalBody) {
                        modalBody.textContent = "{{ message|e('js') }}";
                        const flashModal = new bootstrap.Modal(document.getElementById('flashModal'));
                        flashModal.show();
                    }
                {% endfor %}
            {% endfor %}
        });
    </script>
      {{ encore_entry_script_tags('app') }}
    {% endblock %}

    <script src="{{ asset('build/app.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
  </body>
</html>
