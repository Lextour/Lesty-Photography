{% extends 'headerfooter.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}

{% form_theme form 'form/form_theme.html.twig' %}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow rounded-3 border-0">
        <div class="card-body p-4">
          <h2 class="fw-bold text-center mb-4">Create Your Account</h2>

          {# This isssssssss for Start the form #}
          {{ form_start(form, {
            'action': path('app_user_add_admin'),
            'method': 'POST',
            'attr': {'autocomplete': 'off'}
          }) }}


          {# This isssssssss for Full Name #}
          <div class="mb-3">
            {{ form_label(form.fullname, 'Full Name', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.fullname, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your full name'} }) }}
            {{ form_errors(form.fullname) }}
          </div>

          {# This isssssssss for Email #}
          <div class="mb-3">
            {{ form_label(form.email, 'Email', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your email address'} }) }}
            {{ form_errors(form.email) }}
          </div>

          {# This isssssssss for Password #}
          <div class="mb-3">
            {{ form_label(form.password, 'Password', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your password', 'autocomplete': 'new-password'} }) }}
            {{ form_errors(form.password) }}
          </div>

          {# This isssssssss for Phone Number #}
          <div class="mb-3">
            {{ form_label(form.phoneNumber, 'Phone Number', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.phoneNumber, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your phone number'} }) }}
            {{ form_errors(form.phoneNumber) }}
          </div>

          {# This isssssssss for Address #}
          <div class="mb-3">
            {{ form_label(form.address, 'Address', { 'label_attr': {'class': 'form-label fw-bold'} }) }}
            {{ form_widget(form.address, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your full address'} }) }}
            {{ form_errors(form.address) }}
          </div>

          {# This isssssssss for CSRF token (hidden) #}
          {{ form_row(form._token) }}

          {# This isssssssss for Submit button #}
          <button type="submit" class="btn btn-orange w-100 mt-3">Register</button>

          {{ form_end(form) }}

          <p class="text-center mt-3">
              Already have an account?
              <a href="{{ path('app_login') }}" class="text-orange fw-bold">Login</a>
          </p>

        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
