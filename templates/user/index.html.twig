{# templates/user/index.html.twig #}
{% extends 'adminlayout.html.twig' %}

{% block title %}User Index{% endblock %}

{% block content %}
<div class="container-fluid py-5" style="max-width: 1400px; margin: 0 auto;">

    <!-- Header + Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2 px-3">
        <h3 class="fw-bold mb-0" style="color:#2e2e2e;">üë§ User List</h3>

        <!-- Open modal (instead of navigating to separate page) -->
        <button type="button"
                class="btn btn-sm px-4 py-2 shadow-sm fw-semibold"
                style="background-color:#F88F6A; color:white; border-radius:8px;"
                data-bs-toggle="modal"
                data-bs-target="#addUserModal">
            <i class="bi bi-plus-circle me-1"></i> Create New User
        </button>
    </div>

    <!-- User Table -->
    <div class="card border-0 shadow-sm rounded-4 mx-1">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="usersTable" class="table table-hover table-bordered align-middle mb-0" style="min-width:1400px;">
                    <thead style="background-color:#F88F6A; color:white;">
                        <tr class="text-center">
                            <th class="fw-bold">ID</th>
                            <th class="fw-bold">Email</th>
                            <th class="fw-bold">Password</th>
                            <th class="fw-bold">Roles</th>
                            <th class="fw-bold">Fullname</th>
                            <th class="fw-bold">Phone Number</th>
                            <th class="fw-bold">Address</th>
                            <th class="fw-bold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td class="text-center">{{ user.id }}</td>
                            <td class="text-center">{{ user.email }}</td>

                            <td class="text-center">
                                <span class="password-mask" id="mask-{{ user.id }}">****</span>
                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary toggle-password"
                                        data-user-id="{{ user.id }}"
                                        title="Show/Hide">üëÅÔ∏è</button>
                            </td>

                            <td class="text-center">
                                <span class="badge rounded-pill text-white" style="background-color:#F88F6A;">{{ user.roles }}</span>
                            </td>
                            <td class="text-center">{{ user.fullname }}</td>
                            <td class="text-center">{{ user.phoneNumber }}</td>
                            <td class="text-center">{{ user.address }}</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2 flex-wrap">
                                    <!-- Show modal (inline content) -->
                                    <button type="button"
                                            class="btn btn-sm fw-semibold"
                                            style="background-color:#F88F6A; color:white; border-radius:6px;"
                                            data-bs-toggle="modal"
                                            data-bs-target="#showUserModal{{ user.id }}">
                                        Show
                                    </button>

                                    <!-- Edit modal: lazy-load form via fetch -->
                                    <button type="button"
                                            class="btn btn-sm fw-semibold"
                                            style="background-color:#2e2e2e; color:white; border-radius:6px;"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editUserModal{{ user.id }}"
                                            data-url="{{ path('app_user_edit', {'id': user.id}) }}">
                                        Edit
                                    </button>

                                    {{ include('user/_delete_form.html.twig', { user: user }) }}
                                </div>
                            </td>
                        </tr>

                        {# SHOW USER MODAL (built inline with server data) #}
                        <div class="modal fade" id="showUserModal{{ user.id }}" tabindex="-1" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content border-0 rounded-4 shadow-lg">

                              <div class="modal-header" style="background-color:#F88F6A; color:white;">
                                <h5 class="modal-title fw-semibold">{{ user.fullname ?: user.email }}</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                              </div>

                              <div class="modal-body p-4">
                                  <div class="row">
                                      <div class="col-md-6">
                                          <ul class="list-unstyled small mb-0">
                                              <li class="mb-2"><strong class="text-secondary">Email:</strong> <span class="fw-semibold">{{ user.email }}</span></li>
                                              <li class="mb-2"><strong class="text-secondary">Roles:</strong> <span class="fw-semibold">{{ user.roles }}</span></li>
                                              <li class="mb-2"><strong class="text-secondary">Full Name:</strong> <span class="fw-semibold">{{ user.fullname }}</span></li>
                                              <li class="mb-2"><strong class="text-secondary">Phone:</strong> <span class="fw-semibold">{{ user.phoneNumber }}</span></li>
                                              <li class="mb-2"><strong class="text-secondary">Address:</strong> <span class="fw-semibold">{{ user.address }}</span></li>
                                          </ul>
                                      </div>
                                  </div>
                              </div>

                            </div>
                          </div>
                        </div>

                        {# EDIT MODAL (body lazy-loaded) #}
                        <div class="modal fade" id="editUserModal{{ user.id }}" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                <div class="modal-content border-0 rounded-4 shadow-lg">
                                    <div class="modal-header" style="background-color:#2e2e2e; color:white;">
                                        <h5 class="modal-title">Edit {{ user.fullname ?: user.email }}</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body p-4" id="editUserModalBody{{ user.id }}">
                                        <div class="text-center text-muted py-3">
                                            <div class="spinner-border text-dark" role="status"></div>
                                            <p class="mt-2 mb-0 small">Loading form...</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">No records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{# ADD USER MODAL (lazy-loaded) #}
<div class="modal fade" id="addUserModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content border-0 rounded-4 shadow-lg">
      <div class="modal-header" style="background-color:#F88F6A; color:white;">
        <h5 class="modal-title fw-semibold">Create New User</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body p-4" id="addUserModalBody">
        <div class="text-center text-muted py-3">
            <div class="spinner-border text-dark" role="status"></div>
            <p class="mt-2 mb-0 small">Loading form...</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
#usersTable{
            white-space: nowrap; /* prevent wrapping */
    vertical-align: middle;    font-size: 15px;

}
.card { background-color: #fff; overflow: hidden; }
.table-hover tbody tr:hover { background-color: #f8f9fa; }
.badge { font-weight: 500; }
.form-check-input:checked {
    background-color: #4C763B !important;
    border-color: #4C763B !important;
}
.password-mask, .password-real { font-family: monospace; }
</style>

{% block javascripts %}
    {{ parent() }}
<script>
window.hasRealData = {{ users|length > 0 ? 'true' : 'false' }};
window.userPasswords = {
    {% for user in users %}
    {{ user.id }}: "{{ user.password|e('js') }}"{% if not loop.last %},{% endif %}
    {% endfor %}
};
window.addUserUrl = "{{ path('app_user_add_admin') }}";
window.editUserUrlTemplate = "{{ path('app_user_edit', {'id': 'ID_REPLACE'}) }}";
</script>

{{ encore_entry_script_tags('user') }}

{% endblock %}

{% endblock %}
