{% extends 'headerfooter.html.twig' %}

{% block title %}{{ product.name }} | {{ product.brand }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Open+Sans:wght@400;500;600&display=swap');

    .product-container {
      display: flex;
      flex-wrap: wrap;
      gap: 3rem;
      justify-content: center;
      align-items: flex-start;
      margin: 3rem auto;
      max-width: 1200px;
      padding: 2rem;
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    .product-image {
      flex: 1 1 400px;
      text-align: center;
    }

    .product-image img {
      width: 90%;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .product-details {
      flex: 1 1 450px;
    }

    .breadcrumb {
      color: #777;
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .breadcrumb strong {
      color: #111;
    }

    .product-name {
      font-size: 2rem;
      font-weight: 700;
      color: #222;
    }

    .product-meta {
      margin-top: 0.75rem;
      font-size: 1rem;
      color: #555;
    }

    .product-meta i {
      color: #d10024;
      margin-right: 8px;
    }

    .product-price {
      margin: 1.5rem 0;
      font-size: 1.75rem;
      font-weight: 700;
      color: #F88F6A;
    }

    .product-description {
      margin-bottom: 2rem;
      font-size: 1.05rem;
      line-height: 1.6;
      color: #444;
    }

    .add-to-cart {
      display: inline-block;
      padding: 0.9rem 2rem;
      background-color: #F88F6A;
      color: #fff;
      font-weight: 600;
      border: none;
      border-radius: 8px;
      transition: background 0.3s;
      text-decoration: none;
    }

    .add-to-cart:hover {
      background-color: #a8001a;
    }

    .extra-info {
      margin-top: 1.5rem;
      font-size: 0.95rem;
      color: #666;
    }

    .extra-info i {
      color: #28a745;
      margin-right: 6px;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="product-container">
    <!-- Image Section -->
    <div class="product-image">
      {% if product.image %}
        <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}">
      {% else %}
        <img src="{{ asset('images/placeholder.png') }}" alt="No image available">
      {% endif %}
    </div>

    <!-- Details Section -->
    <div class="product-details">
      <div class="breadcrumb">
        <strong>Products - {{ product.category }}</strong>
      </div>

      <h1 class="product-name">{{ product.name }}</h1>

      <div class="product-meta">
        <p><i class="fas fa-tag"></i> Brand: <strong>{{ product.brand }}</strong></p>
        <p><i class="fas fa-box"></i> Category: {{ product.category }}</p>
        <p><i class="fas fa-barcode"></i> Product ID: {{ product.id }}</p>
      </div>

      <div class="product-price">
        â‚±{{ product.price|number_format(2, '.', ',') }}
      </div>

      <div class="product-description">
        {{ product.description }}
      </div>

      <a href="#" class="add-to-cart"><i class="fas fa-shopping-cart"></i> Add to Cart</a>

      <div class="extra-info">
        <p><i class="fas fa-shield-alt"></i> 3-Year Warranty Included</p>
        <p><i class="fas fa-truck"></i> Free Delivery Available</p>
        <p><i class="fas fa-clock"></i> Last updated: {{ product.updatedat|date('M d, Y') }}</p>
        <a href="{{ path('app_products')}}" class="btn btn-secondary"><i class="fas fa-shopping-cart"></i> Go back to products </a>
      </div>
    </div>
  </div>

  <!-- Font Awesome for icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
{% endblock %}
