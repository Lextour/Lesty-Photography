{% extends 'headerfooter.html.twig' %}

{% block title %}Photographz | Contact{% endblock %}

{% block body %}

<style>
  .contact-section {
    padding: 60px 0;
    background: #f5f5f5;
  }
  .contact-card {
    background: #fff;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: 0.3s ease;
  }
  .contact-card:hover {
    transform: translateY(-5px);
  }
  .form-control, .form-select {
    border-radius: 8px;
    padding: 12px;
    font-size: 0.95rem;
  }
  .btn-orange {
    background: #4C763B;
    color: #fff;
    transition: 0.3s;
  }
  .btn-orange:hover {
    background: #4C763B;
    color: #fff;
  }
  .contact-info i {
    color: #4C763B;
    font-size: 1.2rem;
    margin-right: 10px;
  }
</style>

<!-- Contact Section -->
<section class="contact-section">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="fw-bold text-dark">Get in Touch</h2>
      <p class="text-muted">Weâ€™d love to hear from you. Please fill out the form or reach us via the information below.</p>
    </div>

    <div class="row g-4 align-items-center">
      <!-- Contact Form -->
      <div class="col-lg-7">
        <div class="contact-card">
          <form>
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" placeholder="Enter your name">
              </div>
              <div class="col-md-6">
                <label class="form-label">Email Address</label>
                <input type="email" class="form-control" placeholder="Enter your email">
              </div>
              <div class="col-12">
                <label class="form-label">Subject</label>
                <input type="text" class="form-control" placeholder="Subject">
              </div>
              <div class="col-12">
                <label class="form-label">Message</label>
                <textarea class="form-control" rows="5" placeholder="Write your message here..."></textarea>
              </div>
              <div class="col-12 text-end">
                <button type="submit" class="btn btn-orange px-4">Send Message</button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Contact Info + Image -->
      <div class="col-lg-5">
        <div class="contact-card h-100">
          <h5 class="fw-bold mb-3">Contact Information</h5>
          <div class="contact-info mb-3">
            <p><i class="bi bi-envelope-fill"></i> support@Photographz.com.ph</p>
            <p><i class="bi bi-telephone-fill"></i> +63 123 456 7890</p>
            <p><i class="bi bi-geo-alt-fill"></i> Cebu City, Philippines</p>
          </div>
          <i class="bi bi-person-circle fs-1 text-primary"></i>

        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
